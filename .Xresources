! urxvt
urxvt.xftAntialias:      true
Antialias: 1
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.rgba: rgb

Xft*antialias:          true
Xft*hinting:            full

/* urL-yanking */
urxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode
urxvt.underlineurLs: true
urxvt.perl-lib: /home/xintron/.urxvt/
urxvt.perl-ext: selection,mark-yank-urls
urxvt.urlLauncher: firefox

urxvt.urgentOnBell: true
urxvt.cursorBlink: false
urxvt.transparent: false 
urxvt.shading:          100
urxvt.scrollBar:        false
urxvt.saveLines:        4096
urxvt.mouseWheelScrollPage: true

ratmenu.style: dreary
ratmenu.font: fixed
ratmenu.bgcolor: #222222
ratmenu.fgcolor: #99ff00

urxvt.borderless: true

#include "/home/xintron/.xresources/base16/base16-default.dark.xresources"

/* Colors */
urxvt.colorIT: #FFFFFF
urxvt.colorBD: #FFFFFF
urxvt.colorUL: #FF8F00
urxvt.colorRV: #333333
urxvt.underlineColor: #0E0E0E
urxvt.pointerColor: #252525
urxvt.pointerColor2: #252525

/* fonts */
urxvt.font: xft:DejaVu Sans Mono:pixelsize=10
urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=10:bold
urxvt.italicFont: xft:DejaVu Sans Mono:pixelsize=10:italic

/* Commands for fonting */
urxvt.keysym.C-0: command:\033]710;xft:DejaVu Sans Mono:pixelsize=10\007\033]711;xft:DejaVu Sans Mono:pixelsize=10:bold\007\033]712;xft:DejaVu Sans Mono:pixelsize=10:italic\007
