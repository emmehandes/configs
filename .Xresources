! urxvt
Xft.dpi: 96
Xft.hinting: false
Xft.hintstyle: hintnone
Xft.rgba: rgb
Xft.antialias: true

/* urL-yanking */
urxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode
urxvt.underlineurLs: true
urxvt.perl-lib: /home/xintron/.urxvt/
urxvt.perl-ext: selection,mark-yank-urls
urxvt.urlLauncher: firefox

urxvt.urgentOnBell: true
urxvt.cursorBlink: false
urxvt.transparent: false 
urxvt.shading:          100
urxvt.scrollBar:        false
urxvt.saveLines:        4096
urxvt.mouseWheelScrollPage: true

ratmenu.style: dreary
ratmenu.font: fixed
ratmenu.bgcolor: #222222
ratmenu.fgcolor: #99ff00

urxvt.borderless: true

/* Colors */
urxvt.colorIT: #FFFFFF
urxvt.colorBD: #FFFFFF
urxvt.colorUL: #FF8F00
urxvt.colorRV: #333333
urxvt.underlineColor: #0E0E0E
urxvt.pointerColor: #252525
urxvt.pointerColor2: #252525

#include "/home/xintron/.xresources/base16/base16-tomorrow.dark.xresources"

urxvt.letterSpace: -1
/* fonts */
urxvt.font: xft:inconsolata:pixelsize=13,xft:Dejavu sans mono:pixelsize=13
urxvt.boldFont: xft:inconsolata:pixelsize=13:bold
urxvt.italicFont: xft:inconsolata:pixelsize=13:italic

/* Commands for fonting */
urxvt.keysym.C-0: command:\033]710;xft:inconsolata:pixelsize=13\007\033]711;xft:inconsolata:pixelsize=13:bold\007\033]712;xft:inconsolata:pixelsize=13:italic\007
urxvt.keysym.C-1: command:\033]710;xft:inconsolata:pixelsize=15\007\033]711;xft:inconsolata:pixelsize=15:bold\007\033]712;xft:inconsolata:pixelsize=15:italic\007
urxvt.keysym.C-2: command:\033]710;xft:inconsolata:pixelsize=20\007\033]711;xft:inconsolata:pixelsize=20:bold\007\033]712;xft:inconsolata:pixelsize=20:italic\007
